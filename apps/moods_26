#!/bin/bash
# Animation Mood 26 : Chuchotement (10s)

source /usr/www/cgi-bin/setup.inc
source /usr/www/cgi-bin/url.inc
source /usr/www/cgi-bin/utils.inc
source /usr/www/cgi-bin/leds.inc
source /usr/www/cgi-bin/ears.inc

# Vérifier si le robot est en veille ou si les oreilles sont désactivées
if [ "$karotz.sleep" -eq 1 ] || [ "$ears.disabled" -eq 1 ]; then
    exit 0
fi

# LED bleue douce, pulsation lente pour l’effet de chuchotement
Leds 0000FF 000099 1 1 1000

# Mouvement doux des oreilles vers l'avant
EarsMove 8 8 5
sleep 1

# Petit mouvement vers l'arrière
EarsMove 6 6 5
sleep 1

# Retour à une position légèrement vers l'avant
EarsMove 7 7 5
sleep 1

# Retour à la normale
EarsReset

# LED verte fin animation
Leds 00FF00 000000 1 1 1000
